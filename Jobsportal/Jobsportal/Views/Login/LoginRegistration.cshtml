
@{
    ViewBag.Title = "Login & Signup";
    Layout = "~/Views/Shared/_JobPortalLayoutNoshellber.cshtml";
}

<link rel="icon" href="~/Images/Drashta.png" type="image/gif" sizes="16x16">
@Scripts.Render("~/bundles/UserReg")
@Styles.Render("~/Content/UserRegStyle")



<div class="container" style="margin-top: 100px;">
    <div class="col-md-4 col-md-offset-1 col-sm-4 col-sm-offset-1 col-xs-12 panel-height">
        <div style="padding:15px 0 5px 0; font-size:21px; border-bottom:1px solid #bcbbbc;">
            Registered Users Sign in here
        </div>
        <div class="form-group" style="margin-top:30px;">
            <label for="phone">Phone Number:</label>
            <input type="text" class="form-control" id="phone" name="phone">
        </div>
        <div class="form-group">
            <label for="pwd">Password:</label>
            <input type="password" class="form-control" id="pwd" name="pwd">
        </div>
        <div>
            <button type="button" class="btn btn-success" onclick="signin()">Sign In</button>
            <button type="button" class="btn btn-success" data-toggle="modal" data-target="#ForgetPass">Forgot Password?</button>
            <button type="button" id="JobReturn" class="btn btn-success">Back to Job List</button>
       
        </div>
        <div id="error-message" class="alert alert-danger" style="display: none">
            <button class="close" data-close="alert"></button>
            <span id="error-message-text">
                Error message
            </span>
        </div>
    </div>
    <div class="col-md-1 col-sm-1 col-xs-12" style="height:10px;">

    </div>
    <div class="col-md-4 col-sm-4 col-xs-12 panel-height">
        <div style="padding:15px 0 5px 0; font-size:21px; border-bottom:1px solid #bcbbbc;">
            New To This Portal?
        </div>
        <div class="form-group" style="margin-top: 30px;">
            <label for="Name">Name:</label>
            <input type="text" class="form-control" id="txt_UsrName" name="Name">
        </div>
        <div class="form-group">
            <label for="pwd">Phone Number:</label>
            <input type="text" class="form-control" id="txt_UsrPhone" name="pwd">
        </div>
        <div class="form-group">
            <label for="email">Email:</label>
            <input type="text" class="form-control" id="txt_UsrEmail" name="email">
        </div>
        <div class="form-group">
            <label for="pwd">Password:</label>
            <input type="password" class="form-control" id="txt_UsrPassword" name="pwd">
        </div>
        <div>
            <button type="button" onclick="SignUp()" class="btn btn-success">Sign Up</button>
        </div>
        <div id="error-message_SignUP" class="alert alert-danger" style="display: none">
            <button class="close" data-close="alert"></button>
            <span id="error-message-text_SignUP">
                Error message
            </span>
        </div>
    </div>



</div>

<div id="ForgetPass" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content For Change password-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Reset Password</h4>
            </div>
            <div class="modal-body text-center">
                <label>Phone Number:</label>
                <input type="text" id="txt_ResetPassword" placeholder="Please enter your Phone number" autofocus style="height:30px;border:1px solid #bcbbbc; border-radius:4px; width:50%; padding:5px;" />
                <div id="error-message_fp" class="alert alert-danger" style="display: none">
                    <button class="close" data-close="alert"></button>
                    <span id="error-message-text_fp">
                        Error Message
                    </span>
                </div>
                <div id="success-message_fp" class="alert alert-success" style="display: none">
                    <button class="close" data-close="alert"></button>
                    <span id="success-message-text_fp">
                        Success Message
                    </span>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" onclick="ResetPassword()">Submit</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            </div>
        </div>

    </div>
</div>




<div id="ResetPass" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content For Reset Password-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Change Password</h4>
            </div>
            <div class="modal-body">
                @if (!(ViewBag.Message == "Link Expired"))
                {
                    <table style="border:1px solid #bcbbbc; background-color: #f7f7f7; width:100%;">
                        @*<thead>
                            <tr>
                                <th style="padding: 10px;background-color: #bcbbbc;">
                                    Change password
                                </th>
                            </tr>
                        </thead>*@
                        <tbody>
                            <tr>
                                <td style="padding: 10px;">
                                    <input type="password" id="txt_fpassword" autofocus placeholder="New Password" style="width:100%;height: 30px;border: 1px solid #bcbbbc;padding: 5px;border-radius: 4px;" />
                                </td>
                            </tr>
                            <tr>
                                <td style="text-align:center;padding: 10px;">
                                    <input type="button" value="OK" onclick="ChangePasswordViaReset()" style="background-color:#339933;border:0;padding:7px 14px; color:#ffffff;border-radius:4px;" />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <div id="success-message" class="alert alert-success" style="display:none;">
                                        <button class="close" data-close="alert"></button>
                                        <span id="success-message-text"></span>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                }
                else
                {
                    <table style="border:1px solid #bcbbbc; background-color: #f7f7f7; width:100%;">
                        <thead>

                        <tbody>
                            <tr>
                                <td style="padding: 40px;">
                                    <div id="error-message" class="alert alert-danger">
                                        <button class="close" data-close="alert"></button>
                                        <span id="error-message-text">
                                            Link Expired or Invalid Link
                                        </span>
                                    </div>
                                </td>
                            </tr>

                        </tbody>
                    </table>
                }
            </div>
            @*<div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
              </div>*@
        </div>

    </div>
</div>
