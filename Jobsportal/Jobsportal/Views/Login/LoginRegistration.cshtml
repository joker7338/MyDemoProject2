
@{
    ViewBag.Title = "Login & Signup";
    Layout = "~/Views/Shared/_JobPortalLayoutNoshellber.cshtml";
}

<link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" type="text/css" media="all" />
<link href="@Url.Content("~/Content/jquery-confirm.css")" rel="stylesheet" type="text/css" media="all" />

<script src="@Url.Content("~/Scripts/jquery.min.js?v="+DateTime.Now.Ticks.ToString())" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/bootstrap.js?v="+DateTime.Now.Ticks.ToString())" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery-confirm.js?v="+DateTime.Now.Ticks.ToString())" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/UserRegistration/UserRegistration.js?v="+DateTime.Now.Ticks.ToString())" type="text/javascript"></script>


<script>

    function signin() {
        debugger;
        var Mobile = $('#phone').val();

        var password = $('#pwd').val();
        var UserData = {

            Mobile: Mobile,
            Password: password
        };

        if (Mobile == "" || password == "") {

            $('#error-message').css("display", "block");
            $('#error-message-text').text("Invalid Phone Number/Password");
        }
        else {
            debugger;
            $.ajax({ url: "/Login/SignIn", type: "POST", data: { UserData: UserData } })
                .done(function (data) {

                    if (data != false) {
                        if (Mobile == "admin") {
                            window.location = "/Jobs/Editjobdetail";
                        }
                        else {
                            window.location = "/Jobs/CandidateProfile";

                        }
                    }
                    else {
                        $('#error-message').css("display", "block");
                        $('#error-message-text').text("Invalid Phone Number/Password");

                    }

                })
                .fail(function () {


                });
        }
    }



</script>
<style>

    button.btn.btn-success {
        margin: 5px;
    }

    .panel-height {
        border: 1px solid #f7f7f7;
        padding: 15px;
        height: 500px;
        border-radius: 0px;
        background-color: #f7f7f7;
        -webkit-box-shadow: 0px 0px 12px 2px rgba(188,187,188,1);
        -moz-box-shadow: 0px 0px 12px 2px rgba(188,187,188,1);
        box-shadow: 0px 0px 12px 2px rgba(188,187,188,1);
    }
    #ForgetPass .alert {
        margin-top: 20px;
    }
</style>

<div class="container" style="margin-top: 100px;">
    <div class="col-md-4 col-md-offset-1 col-sm-4 col-sm-offset-1 col-xs-12 panel-height">
        <div style="padding:15px 0 5px 0; font-size:21px; border-bottom:1px solid #bcbbbc;">
            Registered Users Sign in here
        </div>
        <div class="form-group" style="margin-top:30px;">
            <label for="phone">Phone Number:</label>
            <input type="text" class="form-control" id="phone" name="phone">
        </div>
        <div class="form-group">
            <label for="pwd">Password:</label>
            <input type="password" class="form-control" id="pwd" name="pwd">
        </div>
        <div>
            <button type="button" class="btn btn-success" onclick="signin()">Sign In</button>
            <button type="button" class="btn btn-success" data-toggle="modal" data-target="#ForgetPass">Forgot Your Password?</button>
        </div>
        <div id="error-message" class="alert alert-danger" style="display: none">
            <button class="close" data-close="alert"></button>
            <span id="error-message-text">
                Error message
            </span>
        </div>
    </div>
    <div class="col-md-1 col-sm-1 col-xs-12" style="height:10px;">
        @*<div>OR</div>*@
    </div>
    <div class="col-md-4 col-sm-4 col-xs-12 panel-height">
        <div style="padding:15px 0 5px 0; font-size:21px; border-bottom:1px solid #bcbbbc;">
            New To JobPortal?
        </div>
        <div class="form-group" style="margin-top: 30px;">
            <label for="email">Name:</label>
            <input type="text" class="form-control" id="txt_UsrName" name="email">
        </div>
        <div class="form-group">
            <label for="pwd">Phone Number:</label>
            <input type="text" class="form-control" id="txt_UsrPhone" name="pwd">
        </div>
        <div class="form-group">
            <label for="email">Email:</label>
            <input type="text" class="form-control" id="txt_UsrEmail" name="email">
        </div>
        <div class="form-group">
            <label for="pwd">Password:</label>
            <input type="password" class="form-control" id="txt_UsrPassword" name="pwd">
        </div>
        <div>
            <button type="button" onclick="SignUp()" class="btn btn-success">Sign Up</button>
        </div>
        <div id="error-message_SignUP" class="alert alert-danger" style="display: none">
            <button class="close" data-close="alert"></button>
            <span id="error-message-text_SignUP">
                Error message
            </span>
        </div>
    </div>



</div>

<div id="ForgetPass" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Reset Password</h4>
            </div>
            <div class="modal-body text-center">
                <input type="text" id="txt_ResetPassword" placeholder="Please enter your Mobile" autofocus style="height:30px;border:1px solid #bcbbbc; border-radius:4px; width:50%; padding:5px;" />
                <div id="error-message_fp" class="alert alert-danger" style="display: none">
                    <button class="close" data-close="alert"></button>
                    <span id="error-message-text_fp">
                        Error Message
                    </span>
                </div>
                <div id="success-message_fp" class="alert alert-success" style="display: none">
                    <button class="close" data-close="alert"></button>
                    <span id="success-message-text_fp">
                        Success Message
                    </span>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" onclick="ResetPassword()">Submit</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            </div>
        </div>

    </div>
</div>
