
@{
    ViewBag.Title = "LoginRegistration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery.min.js"></script>
<script src="~/Scripts/bootstrap.js"></script>

<style>

    button.btn.btn-success {
        margin:5px;
    }

    .panel-height {
        border: 1px solid #f7f7f7;
        padding: 15px;
        height: 450px;
        border-radius: 0px;
        background-color: #f7f7f7;
        -webkit-box-shadow: 0px 0px 12px 2px rgba(188,187,188,1);
        -moz-box-shadow: 0px 0px 12px 2px rgba(188,187,188,1);
        box-shadow: 0px 0px 12px 2px rgba(188,187,188,1);
    }
</style>

<div class="container" style="margin-top: 100px;">
    <div class="col-md-4 col-md-offset-1 col-sm-4 col-sm-offset-1 col-xs-12 panel-height">
        <div style="padding:15px 0 5px 0; font-size:21px; border-bottom:1px solid #bcbbbc;">
            Registered Users Sign in here
        </div>
        <div class="form-group" style="margin-top:30px;">
            <label for="email">Phone Number:</label>
            <input type="email" class="form-control" id="email" name="email">
        </div>
        <div class="form-group">
            <label for="pwd">Password:</label>
            <input type="password" class="form-control" id="pwd" name="pwd">
        </div>
        <div>
            <button type="button" class="btn btn-success">Sign In</button>
            <button type="button" class="btn btn-success">Forgot Your Password?</button>
        </div>
    </div>
    <div class="col-md-1 col-sm-1 col-xs-12" style="height:10px;">
        @*<div>OR</div>*@
    </div>
    <div class="col-md-4 col-sm-4 col-xs-12 panel-height">
        <div style="padding:15px 0 5px 0; font-size:21px; border-bottom:1px solid #bcbbbc;">
            New To JobPortal?
        </div>
        <div class="form-group" style="margin-top: 30px;">
            <label for="email">Name:</label>
            <input type="email" class="form-control" id="email" name="email">
        </div>
        <div class="form-group">
            <label for="pwd">Phone Number:</label>
            <input type="password" class="form-control" id="pwd" name="pwd">
        </div>
        <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" class="form-control" id="email" name="email">
        </div>
        <div class="form-group">
            <label for="pwd">Password:</label>
            <input type="password" class="form-control" id="pwd" name="pwd">
        </div>
        <div>
            <button type="button" class="btn btn-success">Registration</button>
        </div>
    </div>



</div>



