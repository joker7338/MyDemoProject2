
@{
    ViewBag.Title = "Job List";
    Layout = "~/Views/Shared/_JobPortalLayoutNoshellber.cshtml";
}

@Styles.Render("~/Content/JobList")
@Scripts.Render("~/bundles/JobList")

<div id="ListJobs-wrap">

    <div class="container">
        <div class="row">

            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    <div class="item active">
                        <img src="~/Images/Jobs1.jpg" alt="Jobs Images" />
                    </div>

                    <div class="item">
                        <img src="~/Images/Jobs2.jpg" alt="Jobs Images" />
                    </div>

                    <div class="item">
                        <img src="~/Images/Jobs3.jpg" alt="Jobs Images" />
                    </div>
                </div>

                <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 text-center pad-all">
                <button type="button" class="btn btn-success" onclick="Signinpage()">Sign-In/Register</button>
            </div>
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">


                <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3 pad-all">
                    <span>Keyword Search:</span>
                    <input id="txt_keyword" type="text" />
                </div>

                <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3 pad-all">
                    <span>Posted Within:</span>
                    <select id="ddl_posted">
                        <option value="-365" selected>All</option>
                        <option value="-7">Last 7 days</option>
                        <option value="-15">Last 15 days</option>
                        <option value="-30">Last 30 days</option>
                        <option value="-90">Last 90 days</option>
                    </select>
                </div>

                <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3 pad-all">
                    <span>Location:</span>
                    <select id="ddl_location">
                        <option value="All" selected >All</option>
                        <option value="India">Only India</option>
                        <option value="West Bengal">Only West Bengal</option>
                        <option value="Kolkata">Only Kolkata</option>
                    </select>
                </div>
                <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3 pad-all srch-btn-height" style="text-align:center;">
                    @*<div>&nbsp;</div>*@
                    <button type="button" class="btn btn-success" onclick="Search()">Search</button>
                </div>
            </div>
        </div>
        <div class="row">

            <div class="col-lg-12">

                <table id="grid"></table>
            </div>
        </div>
    </div>
</div>



