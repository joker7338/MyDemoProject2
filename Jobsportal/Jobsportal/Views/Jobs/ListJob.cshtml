
@{
    ViewBag.Title = "Job List";
    Layout = null;
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/Site.css" rel="stylesheet" />

<link rel="icon" href="~/Content/Images/Drashta.png" type="image/gif" sizes="16x16">
<link href="~/Content/grid/grid.css" rel="stylesheet" />
<link href="~/Content/JobsPortalStyleSheets/JobsPortal.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css" rel="stylesheet" />

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/grid/grid.min.js"></script>
<script src="~/Scripts/JobList/JobList.js"></script>

<div id="ListJobs-wrap">

    <div class="container">
        <div class="row">

            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    <div class="item active">
                        <img src="~/Content/Images/Jobs1.jpg" alt="Jobs Images" />
                    </div>

                    <div class="item">
                        <img src="~/Content/Images/Jobs2.png" alt="Jobs Images" />
                    </div>

                    <div class="item">
                        <img src="~/Content/Images/Jobs3.jpg" alt="Jobs Images" />
                    </div>
                </div>

                <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 text-center pad-all">
                <button type="button" class="btn btn-success">Sign-In/Register</button>
            </div>
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
               

                <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3 pad-all">
                    <span>Keyword Search:</span>
                    <input id="txt_keyword" type="text" />
                </div>

                <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3 pad-all">
                    <span>Posted Within:</span>
                    <select id="ddl_posted">
                        <option>All</option>
                        <option>Last 7 days</option>
                        <option>Last 15 days</option>
                        <option>Last 30 days</option>
                        <option>Last 90 days</option>
                    </select>
                </div>

                <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3 pad-all">
                    <span>Location:</span>
                    <select id="ddl_location">
                        <option>All</option>
                        <option>Only India</option>
                        <option>Only West Bengal</option>
                        <option>Only Kolkata</option>
                    </select>
                </div>
                <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3 pad-all" style="text-align:center;">
                    <div>&nbsp;</div>
                    <button type="button" class="btn btn-success" onclick="Search()">Search</button>
                </div>
            </div>
        </div>
        <div class="row">

            <div class="col-lg-12">

                <table id="grid"></table>
            </div>
        </div>
    </div>
</div>


