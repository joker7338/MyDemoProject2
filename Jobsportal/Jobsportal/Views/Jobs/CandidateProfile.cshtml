<style>

    .fixed-font {
        font-family: Monaco,Menlo,Consolas,"Courier New",monospace;
        font-size: 13px;
    }

    .list-unstyled {
        padding-left: 10px;
    }

    input[data-role="input"] {
        outline: none;
        border: none;
        font-size: 14px;
        font-weight: normal;
        line-height: 1.42857;
        vertical-align: middle;
        padding: 6px 12px;
        height: 42px;
    }

    a.list-group-item.hover {
        background-color: #F5F5F5;
        text-decoration: none;
    }

    a.label-info {
        margin: 4px 3px;
        font-size: 14px;
    }

        a.label-info.hover {
            background-color: #31B0D5;
        }

        a.label-info.active {
            background-color: #ADE0EE !important;
        }

        a.label-info .badge {
            font-size: 9px;
            padding: 1px 5px;
        }
</style>
<style>
    ul {
        list-style: none;
        margin: 0;
        padding: 0;
    }

    li {
        margin: 0;
        padding: 0;
    }

    a {
        color: black;
        margin: 3px;
    }

        a:hover, a.hover, li.hover a {
            /*color: green;*/
        }

    .picker {
        border: 1px solid #bcbbbc;
        border-radius: 4px;
    }
</style>

<style>
    .form-inline {
        margin-bottom: 0;
    }

    .panel-group .panel {
        overflow: inherit;
    }

    ul.list-group {
        list-style-type: none !important;
    }

        ul.list-group li {
            padding: 10px;
            border-bottom: 1px solid #bcbbbc;
        }

    .picker {
        background-color: #f7f7f7;
    }

    table#tab_logic.table.table-bordered.table-hover thead tr th {
        position: static !important;
        text-align: left;
    }

    #myMultiSearch div.sel-anchor a {
        padding: 8px;
        background-color: #bcbbbc;
        border-radius: 4px;
        float: left;
    }

    #DocUpload {
        width: 100%;
        border: 1px solid #bcbbbc;
        margin-top: 10px;
    }

        #DocUpload thead tr th, #DocUpload tbody tr td {
            padding: 8px;
        }

        #DocUpload thead tr th {
            background-color: #bcbbbc;
        }

        #DocUpload tbody tr:nth-child(odd) {
            background-color: #ffffff;
        }

        #DocUpload tbody tr:nth-child(even) {
            background-color: #ffffff;
        }


    div.input-group.my-3 {
        position: relative;
        display: flex;
        flex-wrap: wrap;
        align-items: stretch;
        width: 50%;
    }

    span#inputGroupFileAddon01.input-group-text {
        display: flex;
        align-items: center;
        padding: .375rem .75rem;
        margin-bottom: 0;
        font-weight: 400;
        line-height: 1.5;
        color: #495057;
        text-align: center;
        white-space: nowrap;
        background-color: #e9ecef;
        border: 1px solid #ced4da;
        border-radius: .25rem;
        border-top-right-radius: 0;
        border-bottom-right-radius: 0;
    }

    div.custom-file {
        display: flex;
        align-items: center;
    }

    input#inputGroupFile01.custom-file-input {
        margin-bottom: 0;
        /* position: relative; */
        z-index: 2;
        width: 100%;
        margin: 0;
        opacity: 0;
    }

    label.custom-file-label {
        top: 0;
        right: 0;
        left: 0;
        z-index: 1;
        height: calc(1.5em + .75rem + 2px);
        padding: .375rem .75rem;
        font-weight: 400;
        line-height: 1.5;
        color: #495057;
        background-color: #fff;
        border: 1px solid #ced4da;
        border-radius: .25rem;
        width: 150px;
        margin: 0;
        text-align: center;
        padding-left: 15px;
    }

    label {
        display: inline-block;
        margin-bottom: 8px;
        font-weight: bold;
        margin-top: 5px;
    }
</style>

<div class="panel-group">

    <div class="panel panel-primary">
        <div class="panel-heading">
            <h4 class="panel-title">
                <a data-toggle="collapse" href="#panel_Info">Basic Information:</a>
            </h4>

        </div>
        <div class="panel-body collapse" id="panel_Info">
            <form class="form-inline">
                <div class="form-group col-md-12">
                    <div class="avatar-upload">
                        <div class="avatar-edit">
                            <input type='file' id="imageUpload" accept=".png, .jpg, .jpeg" />
                            <label for="imageUpload" class="text-center">
                                <span><i class="fa fa-camera" aria-hidden="true" style="font-size:26px; color: #000000;"></i></span>
                            </label>
                        </div>
                        <div class="avatar-preview">
                            <div id="imagePreview" style="background-image: url('../../Images/NoImage.png');">
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="panel panel-primary">
        <div class="panel-heading">

            <h4 class="panel-title">
                <a data-toggle="collapse" href="#panel_Qual">Qualification Level:</a>
            </h4>
        </div>
        <div class="panel-body collapse in" id="panel_Qual">

            <form class="form-inline">
                <div class="form-group col-md-12">
                    <div id="myMultiSearch">
                        <div data-role="selected-list" class="sel-anchor">
                            <input data-role="input" type="text" placeholder="Search Qualification..." />
                        </div>

                        <div data-role="picker" class="picker1">
                            <ul class="list-group" data-role="picker-list"></ul>
                        </div>
                    </div>

                </div>

            </form>

        </div>
    </div>
    <button type="button" id="SubmitJobDetail" class="btn btn-success Gap2"><span class="glyphicon glyphicon-off"></span>Submit</button>

</div>

