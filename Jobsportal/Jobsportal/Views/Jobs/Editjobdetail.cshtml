</style>
<style>
    ul {
        list-style: none;
        margin: 0;
        padding: 0;
    }

    li {
        margin: 0;
        padding: 0;
    }

    a {
        color: black;
        margin: 3px;
    }

        a:hover, a.hover, li.hover a {
            /*color: green;*/
        }

    .picker {
        border: 1px solid #bcbbbc;
        border-radius: 4px;
    }
</style>

<style>
    .form-inline {
        margin-bottom: 0;
    }

    .panel-group .panel {
        overflow: inherit;
    }

    ul.list-group {
        list-style-type: none !important;
    }

        ul.list-group li {
            padding: 10px;
            border-bottom: 1px solid #bcbbbc;
        }

    .picker {
        background-color: #f7f7f7;
    }

    table#tab_logic.table.table-bordered.table-hover thead tr th {
        position: static !important;
        text-align: left;
    }

    #myMultiSearch div.sel-anchor a {
        padding: 8px;
        background-color: #bcbbbc;
        border-radius: 4px;
        float: left;
    }

    #DocUpload {
        width: 100%;
        border: 1px solid #bcbbbc;
        margin-top: 10px;
    }

        #DocUpload thead tr th, #DocUpload tbody tr td {
            padding: 8px;
        }

        #DocUpload thead tr th {
            background-color: #bcbbbc;
        }

        #DocUpload tbody tr:nth-child(odd) {
            background-color: #ffffff;
        }

        #DocUpload tbody tr:nth-child(even) {
            background-color: #ffffff;
        }


    div.input-group.my-3 {
        position: relative;
        display: flex;
        flex-wrap: wrap;
        align-items: stretch;
        width: 50%;
    }

    span#inputGroupFileAddon01.input-group-text {
        display: flex;
        align-items: center;
        padding: .375rem .75rem;
        margin-bottom: 0;
        font-weight: 400;
        line-height: 1.5;
        color: #495057;
        text-align: center;
        white-space: nowrap;
        background-color: #e9ecef;
        border: 1px solid #ced4da;
        border-radius: .25rem;
        border-top-right-radius: 0;
        border-bottom-right-radius: 0;
    }

    div.custom-file {
        display: flex;
        align-items: center;
    }

    input#inputGroupFile01.custom-file-input {
        margin-bottom: 0;
        /* position: relative; */
        z-index: 2;
        width: 100%;
        margin: 0;
        opacity: 0;
    }

    label.custom-file-label {
        top: 0;
        right: 0;
        left: 0;
        z-index: 1;
        height: calc(1.5em + .75rem + 2px);
        padding: .375rem .75rem;
        font-weight: 400;
        line-height: 1.5;
        color: #495057;
        background-color: #fff;
        border: 1px solid #ced4da;
        border-radius: .25rem;
        width: 150px;
        margin: 0;
        text-align: center;
        padding-left: 15px;
    }

    label {
        display: inline-block;
        margin-bottom: 8px;
        font-weight: bold;
        margin-top: 5px;
    }
</style>
<div class="panel-group">

    <div class="panel panel-primary">
        <div class="panel-heading">
            <h4 class="panel-title">
                <a data-toggle="collapse" href="#panel_Info">Basic Information:</a>
            </h4>

        </div>
        <div class="panel-body collapse" id="panel_Info">
            <form class="form-inline">
                <div class="form-group col-md-6">
                    <label for="companyname" class="col-md-4">Job Number:</label>
                    <input type="text" class="form-control col-md-4" id="txt_JobNumber" placeholder="Job Number">
                </div>

                <div class="form-group col-md-6">
                    <label for="gstin" class="col-md-4">Job Title:</label>
                    <input type="text" class="form-control col-md-4" id="txt_JobTitle" placeholder="Job Title">
                </div>
            </form>

            <form class="form-inline Gap">
                <div class="form-group col-md-6">
                    <label for="companyemail" class="col-md-4">Posted Date:</label>
                    <input class="form-control" type="date" id="txt_PostedDate" name="bday" required pattern="[0-9]{4}-[0-9]{2}-[0-9]{2}">
                </div>
            </form>

            <form class="form-inline">
                <div class="form-group col-md-12">
                    <label for="companyname" class="col-md-4">Apply Link:</label>
                    <input type="text" class="form-control col-md-4" id="txt_AplyLink" placeholder="Apply Link">
                </div>
            </form>

            <form class="form-inline">
                <label for="offc address" class="col-md-2" style="margin-left: 15px !important;">Description:</label>
                <div class="form-group col-md-12">
                    <textarea rows="4" cols="50" id="txt_Descp" align="left" placeholder="Description" class="form-control col-md-4"></textarea>
                </div>
            </form>
        </div>
    </div>
    <div class="panel panel-primary">
        <div class="panel-heading">

            <h4 class="panel-title">
                <a data-toggle="collapse" href="#panel_Qual">Qualification Level:</a>
            </h4>
        </div>
        <div class="panel-body collapse" id="panel_Qual">

            <form class="form-inline">
                <div class="form-group col-md-12">
                    <div id="myMultiSearch">
                        <div data-role="selected-list" class="sel-anchor">
                            <input data-role="input" type="text" placeholder="Search Qualification..." />
                        </div>

                        <div data-role="picker" class="picker">
                            <ul class="list-group" data-role="picker-list"></ul>
                        </div>
                    </div>

                </div>

            </form>

        </div>
    </div>
    <div class="panel panel-primary">
        <div class="panel-heading">

            <h4 class="panel-title">
                <a data-toggle="collapse" href="#panel_Dates">Important Dates:</a>
            </h4>
        </div>
        <div class="panel-body collapse in" id="panel_Dates">

            <div class="row clearfix">
                <div class="col-md-12 column" style="position: static;">
                    <table class="table table-bordered table-hover" id="tab_logic">
                        <thead>
                            <tr>
                                <th class="text-center col-md-1">
                                    #
                                </th>
                                <th class="text-center col-md-5">
                                    Event
                                </th>


                                <th class="text-center col-md-5">
                                    Event Date
                                </th>

                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr id='addr1'>
                                <td id="srn_1">
                                    1
                                </td>
                                <td>
                                    <input type="text" id='productcode_1' placeholder='Event' class="form-control product" />
                                    <input type="hidden" id='productcode_stock_1' aria-hidden="true" />

                                </td>

                                <td>

                                    @*<input type="number" readonly step="any" id='rate_1' placeholder='Price' class="form-control" />*@
                                    <div>
                                        <input class="form-control" type="date" id="evntDate_1" name="bday" required pattern="[0-9]{4}-[0-9]{2}-[0-9]{2}">

                                    </div>
                                </td>

                                <td>
                                    <span class="glyphicon glyphicon-remove" id="del_1" style="cursor: pointer;"></span>
                                </td>
                            </tr>

                        </tbody>
                    </table>
                </div>
            </div>
            <div class="col-md-12">
                <div class="col-md-12 col-sm-12" style="display:flex;justify-content:flex-end;">
                    <a id="add_row" class="btn btn-default pull-left">Add Item</a>
                </div>
            </div>
        </div>
    </div>
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h4 class="panel-title">
                <a data-toggle="collapse" href="#panel_Notes">Important Notes:</a>
            </h4>

        </div>
        <div class="panel-body collapse" id="panel_Notes">
            <div class="input-group my-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroupFileAddon01">Upload</span>
                </div>
                <div class="custom-file">
                    <input type="file" class="custom-file-input" id="inputGroupFile01" aria-describedby="inputGroupFileAddon01" style="height: 30px;">
                    <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
                </div>
            </div>
            <form class="form-inline">
                <div class="form-group col-md-12">
                    <table id="DocUpload">
                        <thead>
                            <tr>
                                <th>File Name</th>
                                <th>Uploaded By</th>
                                <th>Date</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><a href="#">File</a></td>
                                <td>Maynak Nandi</td>
                                <td>06-04-2019</td>
                                <td>Delete</td>
                            </tr>
                        </tbody>
                    </table>
                    <div>
                        <textarea placeholder="Comments" style="min-height:100px; max-height:100px; width:100%; margin-top:10px;border:1px solid #bcbbbc; border-radius: 4px; resize:vertical;"></textarea>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <button type="button" id="SubmitJobDetail" class="btn btn-success Gap2"><span class="glyphicon glyphicon-off"></span>Save</button>

</div>



